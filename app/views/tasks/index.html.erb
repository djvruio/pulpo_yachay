<%= link_to "Back", projects_path, :class => 'btn btn-default' %> | 
<%= link_to "Details Project", project_path(@project), :class => 'btn btn-default' %> 
<%= link_to 'Create Task', new_project_task_path(@project), :class => 'btn btn-default' %>
<hr>
<div class="panel-heading">
      <h6 class="panel-title">Total Progress of Project <%= link_to(@project.alias.upcase, @project)%></h6>
      <h6 class="panel-title"><span class="pull-right">Total Tasks: <%= @tasks.count %></span></h6>
      <br>
      <div class="progress">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: <%= calculate_percentage_statistics(@tasks) %>%"><%= calculate_percentage_statistics(@tasks) %>%
        </div>
      </div>      
    </div><!--/panel-heading--> 
      <h3>Listing tasks for <%= link_to(@project.alias.upcase, @project)%></h3>
<hr>

<% @tasks.each do |task| %>

  <div class="panel panel-info">
    <div class="panel-heading">
      <table>
        <td width="50">
          <%=flag_task_deadline(task)%>
        </td>
        <td width="200">
          <strong>Deadline:</strong> <br> <%= task.deadline? ? task.deadline.strftime("%d %B, %Y") : 'Not set Yet'  %>
        </td>
        <td width="200">
          <strong>Real Deadline:</strong> <br> <%= task.real_deadline? ? task.real_deadline.strftime("%d %B, %Y") : 'Not set Yet'  %>
        </td>
        <td width="180">
          <strong>Asignada a: </strong> <%= task.assigned.try(:email) %>
        </td>
        <td width="150" align="right">
          <strong>Complexity: </strong> <%=format_task_complexity(task)%>
        </td>
        <td width="160" align="right">
         <strong>Status: </strong>  <%= format_task_states(task) %>
        </td>
      </table>
    </div><!--/panel-heading--> 
    <div class="panel-body">
      <table>
          <td>
            <%= task.description %>
          </td>
        <tr>
          <td>
            <hr>
            <div class="actions">
              <% if task.assigned_to_id == current_user.id || current_user.admin? || task.assigned_to_id== nil  %>
                <%= link_to "Edit Task", edit_project_task_path(@project, task) %> | <%= link_to "Delete task", project_task_path(@project, task), method: :delete, data: {confirm: 'Are you sure?'} %>
              <% else %>
                <%= 'Cannot edit' %>
              <% end %>
              | <%= link_to "All Impairments(#{task.inpairments.count})", project_task_inpairments_path(@project,task) %> 
            </div>
  
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
