<%= link_to 'Back', projects_path, :class => 'btn btn-default btn-sm' %> | 
<%= link_to 'Edit Project', edit_project_path(@project), :class => 'btn btn-default btn-sm'  %>
<%= link_to 'Show tasks', project_tasks_path(@project), :class => 'btn btn-default btn-sm' %>
<%= link_to 'Create Task', new_project_task_path(@project), :class => 'btn btn-default btn-sm' %>

<hr>
<strong><h3>Project Details</h3></strong>
<div class="panel panel-default">

    <div class="panel-heading">
      <h4><b><%= @project.name %></b></h4>    
    </div><!--/panel-heading--> 
    <div class="panel-body">
       <table>
        <tr>
          <td width="400">
            Description:
            <%= format_description(@project) %>
          </td>
        </tr>
        <tr>
          <td>Estimated budget:</td>
          <td> <%= format_budget(@project) %></td>
        <tr>
           <td>Strategic:</td>
          <td> <%= format_is_strategic(@project) %></td>
        </tr>      
          <td>Status:</td>
          <td> <%= format_status(@project) %></td>
        </tr>
      </table>
      <hr>
       <h4><b>Strategic Goals for project <%= @project.name %></b></h4>    
      <ul>
        <% @goals.each do |goal| %>
          <li><%= goal.name %></li>
        <% end %>
      </ul>
    </div><!--/panel-body-->
  </div><!--/panel-->

