<h4>Listing projects</h4>
<%= link_to 'Create Project', new_project_path %>

<hr>

<ul>
<% @projects.each do |project| %>
<li>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= link_to(project.name, project_tasks_path(project)) %> <%= format_status(project) %></h4>
     
    </div><!--/panel-heading--> 
    <div class="panel-body">
       <table>
          <tr>
            <td><%= project.description %></td>
          </tr>
          <tr>
            <th>Strategic:</th>
            <td><%= format_is_strategic(project) %></td>
             <th>Estimated budget:</th>
            <td><%= format_budget(project) %></td>
          </tr>
          <tr>
            <td> 
              <%= link_to "Edit", edit_project_path(project) %> | 
              <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>|
              <%= link_to 'All memberships', project_memberships_path(project) %>|
              <%= link_to 'Create membership', new_project_membership_path(project) %>
            </td>
          </tr>
        </table>
    </div><!--/panel-body-->
  </div><!--/panel-->
</li>
 <% end %>
</ul>

