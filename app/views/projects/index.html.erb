<%= link_to t('Create Project'), new_project_path, :class => 'btn btn-default' %>
<hr>
<h3> <%= t('Listing Projects') %> </h3>

<hr>
<% @projects.each do |project| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><b><%= format_is_critical(project) %> <%= link_to(project.alias, project_tasks_path(project)) %> <%= format_status(project,'right') %></b></h4>
      <h6 class="panel-title"><span class="pull-right">Total Tasks: <%= project.tasks.count %></span></h6>
      <br>
      <a href=<%= raw project_tasks_path(project)%>>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: <%= calculate_percentage_statistics(project.tasks) %>%"><%= calculate_percentage_statistics(project.tasks) %>%
        </div>
      </a>
      </div>
    </div><!--/panel-heading--> 
    <div class="panel-body">
      <table>
        <tr>
          <td width="400">
            Name:
            <%= project.name %>
          </td>
        </tr>
        <tr>
          <td width="400">
            Description:
            <%= format_description(project) %>
          </td>
        </tr>
        <tr>
          <td>
            Strategic:
            <%= format_is_strategic(project) %>
          </td>
          <td>
            Estimated budget:
            <%= format_budget(project) %>
          </td>
        </tr>
      </table>
      <hr>
      <%= link_to "Edit", edit_project_path(project) %> | 
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> | 
      <%= link_to 'All memberships', project_memberships_path(project) %> | 
      <%= link_to 'Create membership', new_project_membership_path(project) %>|

    </div><!--/panel-body-->
  </div><!--/panel-->

 <% end %>
