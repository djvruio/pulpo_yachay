<%= link_to 'Back',project_tasks_path(@project,@tasks), class: 'btn btn-default' %> | 
<%= link_to 'New Impairment',new_project_task_inpairment_path, class: 'btn btn-default' %>
<hr>
<div class="panel-heading">
  <h3><%= @inpairments.count %> Impairments for <%= link_to(@task.description, @tasks)%></h3>
 </div>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inpairments.each do |inpairment| %>
      <tr>
        <td><%= inpairment.description %></td>
        <td><%= link_to 'Edit', edit_project_task_inpairment_path(@project,@task,inpairment), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', project_task_inpairment_path(@project,@task,inpairment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %></tr>
      </tr>
    <% end %>
  </tbody>
</table>
<br>